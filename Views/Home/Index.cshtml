@using E_Shelf_WebUI.ResponseModel
@model List<ProductResponseModel>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>E Shelf WebApi Consume</title>
</head>
<body>
    <p>
        UI Layer Working..
    </p>
    <br />
    <a asp-controller="Home" asp-action="Create">Create New Product</a>
    <br />
    <hr />
    <table border="1">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>
                    <a asp-controller="Home" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    <a asp-controller="Home" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
</body>
</html>